<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accueil_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_bottom" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/homme" />

    <TextView
        android:id="@+id/helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/topView"
        android:layout_alignBottom="@+id/topView"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="79dp"
        android:text="Hello"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/topView"
        android:layout_marginStart="42dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="50dp"
        android:text="May, 12 2023"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nomBarrage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/topView"
        android:layout_marginStart="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:text="Barrage"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listNodes"
        android:layout_width="match_parent"
        android:layout_height="727dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp" />

</RelativeLayout>
